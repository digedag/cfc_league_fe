{% macro name_full(profile) %}
{% spaceless %}
  {% if not profile or profile.uid == -1 %}
    {{ 'profile_unknownLastname'|t3trans }}
  {% elseif profile.getStage_name %}
    {{ profile.getStage_name }}
  {% else %}
  	{{ profile.getfirst_name }} {{ profile.getlastName }}
  {% endif %}
{% endspaceless %}
{% endmacro %}

